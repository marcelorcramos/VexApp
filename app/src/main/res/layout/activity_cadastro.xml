<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/possivel2"
    android:alpha="0.8"
    tools:context=".Cadastro">

    <TextView
        android:id="@+id/ic_seta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_seta"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vexlogo"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"/>


    <View
        android:id="@+id/containerLogin"
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="230dp"
        android:alpha="0.7"
        android:background="@drawable/container_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <TextView
        android:id="@+id/txtCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registo"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="153dp"
        app:layout_constraintEnd_toEndOf="@+id/containerLogin"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintTop_toTopOf="@id/containerLogin" />

    <TextView
        android:id="@+id/txtIntroducao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduza os seus dados"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="110dp"
        app:layout_constraintTop_toTopOf="@id/containerLogin"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@+id/containerLogin"/>

    <EditText
        android:id="@+id/editNome"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:hint="  Nome"
        android:background="@drawable/container_login"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="360dp"
        android:layout_marginHorizontal="60dp"
        android:drawableRight="@drawable/ic_ultilizador"
        app:layout_constraintTop_toBottomOf="@id/txtIntroducao"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:hint="  Email"
        android:background="@drawable/container_login"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="300dp"
        android:layout_marginHorizontal="60dp"
        android:drawableRight="@drawable/ic_email"
        app:layout_constraintTop_toBottomOf="@id/txtIntroducao"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"/>

    <EditText
        android:id="@+id/editPalavraPasse"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:hint=" Palavra-passe"
        android:background="@drawable/container_login"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:layout_marginTop="440dp"
        android:layout_marginBottom="240dp"
        android:layout_marginHorizontal="60dp"
        android:drawableRight="@drawable/ic_lock"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"/>

    <EditText
        android:id="@+id/editPalavraPasseConfirmacao"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:hint=" Confirme sua palavra-passe"
        android:background="@drawable/container_login"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="180dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"/>

    <EditText
        android:id="@+id/contactoseguranca"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:hint=" Contacto de emergencia"
        android:background="@drawable/container_login"
        android:inputType="phone"
        android:maxLines="1"
        android:layout_marginTop="560dp"
        android:layout_marginBottom="120dp"
        android:layout_marginHorizontal="60dp"
        android:drawableRight="@drawable/ic_alert"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"/>


    <TextView
        android:id="@+id/txtJaTemConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JÃ¡ tem conta?"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="670dp"
        android:layout_marginLeft="140dp"
        app:layout_constraintTop_toTopOf="@id/containerLogin"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@+id/containerLogin"/>

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="16dp"
        android:textColor="@color/azulclaro"
        android:textStyle="bold"
        android:layout_marginTop="670dp"
        android:layout_marginLeft="245dp"
        app:layout_constraintTop_toTopOf="@id/containerLogin"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@+id/containerLogin"/>

    <Button
        android:id="@+id/btnCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registe-se"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="620dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/verdeclaro"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"
        app:layout_constraintBottom_toBottomOf="@id/containerLogin"/>

</RelativeLayout>