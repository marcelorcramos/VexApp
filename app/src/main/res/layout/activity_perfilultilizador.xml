<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfilultilizador">

  <TextView
      android:id="@+id/ic_seta"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableRight="@drawable/ic_seta"
      />

  <View
      android:id="@+id/maindesign"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginTop="0dp"
      android:layout_marginLeft="-60dp"
      android:alpha="0.2"
      android:background="@drawable/designmain"
      />

  <View
      android:id="@+id/maindesign2"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginTop="-50dp"
      android:layout_marginLeft="10dp"
      android:alpha="0.2"
      android:background="@drawable/designmain"
      />

  <TextView
      android:id="@+id/txtnome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="   Carlos"
      android:textColor="@color/black"
      android:textSize="23dp"
      android:textStyle="bold"
      android:layout_marginTop="150dp"
      android:layout_marginLeft="160dp"
      android:layout_centerHorizontal="true" />

  <TextView
      android:id="@+id/btnirutilizador"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_marginTop="70dp"
      android:layout_marginLeft="165dp"
      android:backgroundTint="@color/white"
      android:drawableLeft="@drawable/ic_pinperson"
      android:gravity="center"
      android:clickable="true"
      android:focusable="true"
      android:padding="10dp"/>

  <Button
      android:id="@+id/btndadospessoais"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Dados pessoais"
      android:textSize="16dp"
      android:textColor="@color/secundaria"
      android:drawableLeft="@drawable/ic_person"
      android:drawableRight="@drawable/ic_arrow"
      android:layout_marginHorizontal="0dp"
      android:layout_marginTop="220dp"
      android:layout_marginLeft="20dp"
      android:backgroundTint="@color/white"
      android:gravity="left|center_vertical"/>

  <View
      android:id="@+id/containerinfo"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_marginHorizontal="0dp"
      android:layout_marginTop="290dp"
      android:background="@drawable/container_login"/>

  <TextView
      android:id="@+id/txtLocaisGuardados"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Locais guardados"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold"
      android:layout_marginTop="300dp"
      android:layout_marginLeft="30dp" />

  <Button
      android:id="@+id/btnadicionarmoradacasa"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Adicionar morada de casa"
      android:textSize="16dp"
      android:textColor="@color/secundaria"
      android:drawableLeft="@drawable/ic_home"
      android:drawableRight="@drawable/ic_arrow"
      android:layout_marginHorizontal="0dp"
      android:layout_marginTop="340dp"
      android:layout_marginLeft="20dp"
      android:backgroundTint="@color/white"
      android:gravity="left|center_vertical"/>

  <View
      android:id="@+id/editBox"
      android:layout_width="match_parent"
      android:layout_height="3dp"
      android:layout_marginStart="20sp"
      android:layout_marginBottom="30dp"
      android:layout_marginTop="380dp"
      android:background="@drawable/container_login"
      android:textSize="10sp" />

  <Button
      android:id="@+id/btnadicionarmoradatrabalho"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Adicionar morada do trabalho"
      android:textSize="16dp"
      android:textColor="@color/secundaria"
      android:drawableLeft="@drawable/ic_work"
      android:drawableRight="@drawable/ic_arrow"
      android:layout_marginHorizontal="0dp"
      android:layout_marginTop="390dp"
      android:layout_marginLeft="20dp"
      android:backgroundTint="@color/white"
      android:gravity="left|center_vertical"/>

  <View
      android:id="@+id/editBox2"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="20sp"
      android:layout_marginBottom="30dp"
      android:layout_marginTop="435dp"
      android:backgroundTint="@color/red"
      android:textSize="10sp" />

  <Button
      android:id="@+id/btnadicionarmais"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Adicionar local"
      android:textSize="16dp"
      android:textColor="@color/secundaria"
      android:drawableLeft="@drawable/ic_add"
      android:drawableRight="@drawable/ic_arrow"
      android:layout_marginHorizontal="0dp"
      android:layout_marginTop="440dp"
      android:layout_marginLeft="20dp"
      android:backgroundTint="@color/white"
      android:gravity="left|center_vertical"/>



  </RelativeLayout>