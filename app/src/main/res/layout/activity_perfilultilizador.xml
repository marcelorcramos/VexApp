<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfilultilizador">

  <TextView
      android:id="@+id/ic_seta"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableRight="@drawable/ic_seta"
      />

  <View
      android:id="@+id/maindesign"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginTop="0dp"
      android:layout_marginLeft="-60dp"
      android:alpha="0.2"
      android:background="@drawable/designmain"
      />

  <View
      android:id="@+id/maindesign2"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginTop="-50dp"
      android:layout_marginLeft="10dp"
      android:alpha="0.2"
      android:background="@drawable/designmain"
      />

  <TextView
      android:id="@+id/txtOsMeusDados"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Os meus dados"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold"
      android:layout_marginTop="100dp"
      android:layout_centerHorizontal="true" />

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profileImage"
      android:layout_width="200dp"
      android:layout_height="350dp"
      android:src="@drawable/profile"
    android:layout_marginTop="70dp"
      android:layout_marginLeft="100dp"
    />

  <EditText
      android:id="@+id/editProfissao"
      android:layout_width="300dp"
      android:layout_height="match_parent"
      android:hint="  Profissão"
      android:background="@drawable/container_perfil"
      android:backgroundTint="@color/primaria"
      android:alpha="0.7"
      android:inputType="text"
      android:maxLines="1"
      android:layout_marginTop="400dp"
      android:layout_marginBottom="280dp"
      android:layout_marginHorizontal="60dp"/>

  <EditText
      android:id="@+id/editCarro"
      android:layout_width="300dp"
      android:layout_height="match_parent"
      android:hint="  Carro"
      android:background="@drawable/container_perfil"
      android:backgroundTint="@color/primaria"
      android:alpha="0.7"
      android:inputType="text"
      android:maxLines="1"
      android:layout_marginTop="470dp"
      android:layout_marginBottom="210dp"
      android:layout_marginHorizontal="60dp"/>

  <EditText
      android:id="@+id/editMatricula"
      android:layout_width="300dp"
      android:layout_height="match_parent"
      android:hint="  Matrícula"
      android:background="@drawable/container_perfil"
      android:backgroundTint="@color/primaria"
      android:alpha="0.7"
      android:inputType="text"
      android:maxLines="1"
      android:layout_marginTop="540dp"
      android:layout_marginBottom="140dp"
      android:layout_marginHorizontal="60dp"/>

  <Button
      android:id="@+id/btnSubmeter"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Submeter"
      android:textSize="18dp"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:layout_marginHorizontal="80dp"
      android:layout_marginTop="620dp"
      android:layout_marginBottom="40dp"
      android:backgroundTint="@color/verdeclaro"/>

  </RelativeLayout>